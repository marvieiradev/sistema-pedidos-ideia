generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    String @id @default(cuid())
  email String @unique
  nome  String
  senha String
}

model Pedido {
  id           String  @id @default(cuid())
  cod_pedido   String  @unique
  nome_cliente String
  quantidade   String
  costureira   String
  imagem_url   String
  arte         Boolean @default(false)
  exportacao   Boolean @default(false)
  impressao    Boolean @default(false)
  corte        Boolean @default(false)
  prensa       Boolean @default(false)
  costura      Boolean @default(false)
}
